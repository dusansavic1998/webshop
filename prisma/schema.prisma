// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// COMPANY (from API)
// ============================================

model Company {
  id            Int       @id @default(autoincrement())
  companyId     Int       @unique  // Reference to InfosAPI companyId
  name          String
  database      String
  logoUrl       String?
  description   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  categories    Category[]
  products      Product[]
  blogPosts     BlogPost[]
}

// ============================================
// CATEGORIES (from API + local additions)
// ============================================

model Category {
  id            Int       @id @default(autoincrement())
  categoryId    String    @unique  // InfosAPI articleGroupId OR local-uuid
  name          String
  code          String?
  parentId      String?
  isLocal       Boolean   @default(false)  // true = created in admin, false = from API
  companyId     Int
  company       Company   @relation(fields: [companyId], references: [companyId])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  products      Product[]
}

// ============================================
// PRODUCTS (from API + local additions)
// ============================================

model Product {
  id            Int       @id @default(autoincrement())
  articleId     Int?      @unique  // InfosAPI articleId (null if local only)
  sku           String?
  name          String
  description   String?
  price         Float     @default(0)
  salePrice     Float?
  image         String?
  images        String[]  // JSON array of image URLs
  stock         Int       @default(0)
  inStock       Boolean   @default(true)
  isLocal       Boolean   @default(false)  // true = created in admin
  isActive      Boolean   @default(true)
  taxRate       Float     @default(17)
  categoryId    Int?
  category      Category? @relation(fields: [categoryId], references: [id])
  companyId     Int
  company       Company   @relation(fields: [companyId], references: [companyId])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// ============================================
// BLOG POSTS (local only)
// ============================================

model BlogPost {
  id              Int       @id @default(autoincrement())
  title           String
  slug            String    @unique
  excerpt         String?
  content         String    @db.Text
  featuredImage   String?
  authorName      String    @default("Apetitio")
  authorAvatar    String?
  category        String?
  tags            String[]  // JSON array
  status          String    @default("draft") // draft, published, archived
  publishedAt     DateTime?
  views           Int       @default(0)
  isFeatured      Boolean   @default(false)
  companyId       Int
  company         Company   @relation(fields: [companyId], references: [companyId])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// ============================================
// SETTINGS
// ============================================

model Settings {
  id              Int       @id @default(autoincrement())
  key             String    @unique
  value           String    @db.Text
  updatedAt       DateTime  @updatedAt
}
